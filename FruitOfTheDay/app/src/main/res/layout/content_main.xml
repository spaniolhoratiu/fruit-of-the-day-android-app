<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:src="@drawable/main_logo_v1" />

    <TextView
        android:id="@+id/yourfruitis_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="25dp"
        android:textAlignment="center"
        android:text="Your fruit is:"
        android:textSize="60dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/main_logo"
        />

    <TextView
        android:id="@+id/thefruit_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="25dp"
        android:textAlignment="center"
        android:text="None"
        android:textSize="95dp"
        android:textColor="@android:color/black"
        android:background="@drawable/main_logo_v1"
        android:layout_below="@+id/yourfruitis_view"
        />

    <Button
        android:id="@+id/btnGetFruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textSize="25sp"
        android:text="Get your fruit"
        android:layout_below="@+id/thefruit_view"
        />


    <TextView
        android:id="@+id/updatefruit_field"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/btnGetFruit"
        android:text="Update fruits"
        android:textSize="35dp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/editText"
        android:layout_below="@id/updatefruit_field"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        >

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="100dp"
            android:text="Add" />

        <Button
            android:id="@+id/btnView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_alignParentRight="true"
            android:text="View Data" />
    </RelativeLayout>


</RelativeLayout>